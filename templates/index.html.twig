<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
{% include 'navbar.html.twig' %}

<div class="container">
    <div class="text-center mt-5">
        <h1> Accueil</h1>
        <p class="lead">Licence ASR</p>
        <p>Mon Blog</p>
    </div>

    {% if session.notification %}
        <div class="row">
            <div class="col-12">
                <div class="alert alert-{{ session.notification.result }}" role="alert">
                    {{ session.notification.message }}
                </div>
            </div>
        </div>
    {% endif %}

<div class="row">
    {% for article in listeArticles %}
   <div class="col-6 mb-4">
            <div class="card">
                <img src="img/{{ article.getId }}.jpg" 
                style="max-width: 200px;" 
                class="card-img-top" alt="{{ article.getTitre }}">
                <div class="card-body">
                    <h5 class="card-title">{{ article.getTitre }}</h5>
                    <p class="card-text">{{ article.getTexte }}</p>
                    <a href="#" class="btn btn-primary">{{ article.getDate }}</a>
                   <a href="update.php?id={{ article.getId }}" class="btn btn-primary">Modifier</a>
                    <a href="pagearticles.php?id={{ article.getId }}" class="btn btn-primary">Afficher</a>
                    <a href="FormDeleteArticles.php?id={{ article.getId }}" class="btn btn-primary">Supprimer</a>

                   
                </div>
            </div>
        </div>
        {% endfor %}
</div>

 {% include 'footer.html.twig' %}

            </body>
</html>
